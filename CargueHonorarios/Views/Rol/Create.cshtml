@model CargueHonorarios.Models.Rol

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">

<h3 style="text-align:center">Crear Rol</h3>
<br />
<br />

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

 <fieldset>
      
<div class="container">
    <div class="row">
     <div class="col-sm-6">

        <div class="editor-label" style="font-weight:bold">
            Grupo
        </div>
        <div class="editor-field">
             @Html.ValidationMessageFor(model => model.GrupoId)
             @Html.DropDownListFor(model => model.GrupoId, new SelectList(Model.ListadoGrupos, "Id", "Descripcion"),"Seleccione un grupo", htmlAttributes: new { @class = "form-control"})
        </div>

        <div class="editor-label" style="font-weight:bold">
            Id del Usuario
        </div>
        <div class="editor-field">
           @Html.TextBox("UsuarioId", null, htmlAttributes: new { @class = "form-control"} )
            @Html.ValidationMessageFor(model => model.UsuarioId)
        </div>
</div>
</div>
</div>
     <div>
         <br />
      <div class="col-6">
            <input type="submit" value="Crear" class="btn btn-success"  style="color:white"/>
             @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-success", style = "color:white" })    
       </div>
    </div>
    </fieldset>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
