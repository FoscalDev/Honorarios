@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string Error = string.Format("{0}", Session["message"]);
    if(!string.IsNullOrWhiteSpace(Error)) { Session.Remove("message");}
}


@using System.Web.Optimization;


@if (Error != ""){
<div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h4 class="alert-heading">Error!</h4>
            <hr>
            <p class="mb-0">@Error</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"> </button><span aria-hidden="true">&times; </span>
    </div>  
}

<div class="container col-sm-offset-2 col-md-offset-2 col-lg-offset-3 col-sm-8 col-md-8 col-lg-6">
    <form action="~/Login/Validar" method="post">

        <br />
       <div class="panel panel-info center-block">
        <div class="card  border-info mb-3 shadow p-3 mb-5" style="max-width: 35rem;"><br />
            <div class="panel-heading" align="center">
                <h2 class="text-primary">Bienvenido</h2>
            </div>
            <br />


            <div class="form-horizontal" align="center">
               <img src="~/Contents/image/favicon.ico" >
                <div class="form-group">
                   <br />
                    <label class="control-label col-sm-5 text-primary" style="font-weight:bold">Codigo Usuario </label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" autofocus="autofocus" name="alias" value="" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-5 text-primary" style="font-weight:bold">Contraseña </label>
                    <div class="col-sm-5">
                        <input type="password" class="form-control" autofocus="autofocus" name="password" value="" />
                    </div>
                </div>

                <div class="form-group">
                    <hr />

                    <div class="col-sm-10">
                        <div class="text-center">
                            <button type="submit" id="loginAccedr" class="btn btn-lg btn-primary" >Ingresar</button>
                        </div>
                   </div>
                    <br />
                    @*<div class="col-sm-5">
                        <div class="text-center">
                             @Html.ActionLink("Crear Usuario","Registrar", null, new { @class="btn btn-success" })
                        </div>
                   </div>*@

                   
                </div>

               </div>
        </div>
    </div>
</div>


