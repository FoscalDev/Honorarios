@model IEnumerable<CargueHonorarios.Models.Rol>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">

<h3 style="text-align:center" >Roles del usuario</h3>
<br />

<p>
    @Html.ActionLink("Crear Nuevo Rol", "Create",null, new { @class = "btn btn-success", style = "color:white" })
</p>
<br />
<div class = "table-responsive">
<table class= "table table-hover">
<tr style="background-color:#3a6a98" class="text-white">
        <th>
            Grupo de Usuario
        </th>
        <th>
            Id Usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GrupoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioId)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) 
        </td>
    </tr>
}
</table>
</div>
</div>